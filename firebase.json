{
    "hosting": [
        {
            "target": "tickist-web",
            "public": "dist/apps/tickist-web",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ],
            "headers": [
                {
                    "source": "**/*.@(jpg|jpeg|gif|png|svg)",
                    "headers": [
                        {
                            "key": "Cache-Control",
                            "value": "max-age=86400"
                        },
                        {
                            "key": "Content-Encoding",
                            "value": "gzip"
                        }
                    ]
                },
                {
                    "source": "**/*.@(js|css)",
                    "headers": [
                        {
                            "key": "Cache-Control",
                            "value": "max-age=31536000"
                        },
                        {
                            "key": "Content-Encoding",
                            "value": "gzip"
                        }
                    ]
                },
                {
                    "source": "**/*-sw.js",
                    "headers": [
                        {
                            "key": "Cache-Control",
                            "value": "no-cache"
                        }
                    ]
                }
            ]
        }
    ],
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "predeploy": [
            "npm run lint tickist-functions",
            "npm run build:functions"
        ],
        "source": "/"
    },
    "storage": {
        "rules": "storage.rules"
    },
    "emulators": {
        "firestore": {
            "host": "0.0.0.0",
            "port": 8080
        },
        "auth": {
            "port": 9099
        },
        "ui": {
            "enabled": true,
            "port": 4001
        },
        "functions": {
            "port": 5001
        },
        "database": {
            "host": "0.0.0.0",
            "enabled": false,
            "port": 9000
        },
        "pubsub": {
            "port": 8085
        },
        "hosting": {
            "port": 5000
        }
    }
}
